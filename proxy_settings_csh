#!/bin/csh
# This file loads the Cisco proxy settings.
# Latest copy always here: https://github.com/mattsday/dotfiles/

# Use same proxy host for all protocols
setenv proxy http://proxy.esl.cisco.com:80/
setenv http_proxy $proxy
setenv https_proxy $proxy
setenv ftp_proxy $proxy
setenv PROXY $proxy
setenv HTTP_PROXY $proxy
setenv HTTPS_PROXY $proxy
setenv FTP_PROXY $proxy

# Provide a generic sequence method (and proof that csh sucks!)
alias sequence 'eval "if (-X jot) then \\
jot -s , -w \!*.%d 255 0 255 \\
else if (-X seq) then \\
seq -f \!*.%g -s "," 0 255 \\
endif"'

# Whitelist common lab ranges
set CORP_A_WHITELIST = `sequence 10.52.208`
set CORP_B_WHITELIST = `sequence 10.51.8`

# Frontend/App/Backend whitelists
set FE_WHITELIST = `sequence 192.168.210`
set APP_WHITELIST = `sequence 192.168.211`
set BE_WHITELIST = `sequence 192.168.212`

# Common OpenStack whitelist
set OS_WHITELIST = `sequence 10.0.0`

setenv no_proxy ".cisco.com,127.0.0.1,localhost,local.home,0.0.0.0,$CORP_A_WHITELIST,$CORP_B_WHITELIST,$FE_WHITELIST,$APP_WHITELIST,$BE_WHITELIST,$OS_WHITELIST"
setenv NO_PROXY $no_proxy

# vim: syntax=csh
