# =================
# Alias definitions
# =================
# This file sets all the alias definitions in a shell-agnostic fashion
# The command `update_aliases` takes this file and creates output for
# sh, csh, fish and any other shell I care to add in future.
#
# Format:
# alias @requirement,/path/to/requirement alias1=value @ alias2=!which-this-value
# Very exotic but it works :-). To update run `update_aliases force`

# Allow sudo expansion
alias @sudo sudo='sudo '

# Common shortcuts
alias @/usr/bin/dircolors ls='ls --si --color'
# Use human readable ls output
alias ll='ls -lahF'
# ...but prefer SI units if using GNU ls
alias @/usr/bin/dircolors ll='ls --si -laF'
alias l='ls -aCF'
alias l.='ls -d .*'
alias j='jobs -l'

# Use GNU tools if available
alias @gls ls='!gls --si --color'
alias @gls ll='ls -laF'
alias @gfind find='gfind'
alias @gsed sed='gsed'
alias @gtar tar='gtar'
alias @gawk awk='gawk'
alias @gdu du='gdu --si'
alias @gdf df='gdf --si'

# Shit happens...
alias 'cd..=cd ..'
alias 'cd~=cd ~'
alias 'tmuxa=tmux a'
alias @tmux-next tmux='tmux-next'

# If autocd doesn't work then at least give me this!
alias ..='cd ..'

# Don't enable homebrew analytics
export @/usr/local/bin/brew HOMEBREW_NO_ANALYTICS=1

# ...not .NET ones
export @dotnet DOTNET_CLI_TELEMETRY_OPTOUT=1

# Single alias to upgrade homebrew
alias @/usr/local/bin/brew update='brew update; brew upgrade; brew cleanup; brew doctor'

# Give me readable times
export TIME_STYLE="long-iso"

# Colours too!
export CLICOLOR="yes"
export LSCOLORS="gxhxfxcxcxdxcxcxcxgxgx"
export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'

# Use k (1024) as the default blocksize (not 512)
export BLOCK_SIZE=k
export BLOCKSIZE=k

# Use vim instead of vi if it exists
alias @vim vi=!vim
export @vim VISUAL='!vim'@EDITOR='!vim'@USE_EDITOR='!vim'

# Cloud Foundry-ness
alias @cf cfa="cf a"@cfs="cf s"@cfm="cf m"@cfp="cf p"@cfl="cf logs"
export @cf CF_COLOR=true

# Use less as a pager
export @less PAGER=less

# On OS X, the go version of bosh is called gosh, alias to it if it exists:
alias @gosh bosh=!gosh

# Debian Systems
alias @sudo,/usr/bin/apt update='apt update && apt upgrade'
#alias @sudo,/usr/bin/apt apt='sudo apt'@apt-get='apt'

# Arch Linux
alias @sudo,/usr/bin/pacman pacman='sudo pacman '
alias @sudo,/usr/bin/pacman update='pacman -Syu'

# Red Hat
alias @/usr/bin/yum,sudo yum='sudo yum'@update='yum update'

# OpenBSD
alias @/usr/sbin/pkg_add,sudo pkg_add='sudo /usr/sbin/pkg_add'@pkg_delete='sudo /usr/sbin/pkg_delete'@update='pkg_add -uvi'

# FreeBSD
alias @/usr/sbin/pkg,sudo pkg='sudo /usr/sbin/pkg'@update='pkg update && pkg upgrade'
alias @/usr/sbin/freebsd-update,sudo freebsd-update='sudo /usr/sbin/freebsd-update'

# Fedora
alias @/usr/bin/dnf,sudo dnf='sudo dnf'@yum='dnf'@update='dnf update'

# SuSE
alias @/usr/bin/zypper,sudo zypper='sudo zypper'@update='zypper update'

# Generic services
alias @/usr/sbin/service service='sudo service'
